{
  "name": "girders-elements-container",
  "private": true,
  "description":
    "Girders Elements is an architectural framework that assists with building data-driven apps with React or React Native.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/netceteragroup/girders-elements.git"
  },
  "author": "Netcetera",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/netceteragroup/girders-elements/issues"
  },
  "homepage": "https://github.com/netceteragroup/girders-elements#readme",
  "scripts": {
    "postinstall": "lerna bootstrap",
    "prepublish": "yarn run clean && yarn run es5",
    "test": "jest",
    "test-watch": "jest --watch",
    "coverage": "jest --coverage",
    "coverage-report": "cat ./coverage/lcov.info | coveralls",
    "lint": "eslint .",
    "es5":
      "yarn run es5:core && yarn run es5:config && yarn run es5:components",
    "es5:core": "babel -q packages/core/src --out-dir packages/core/dist/es5",
    "es5:config":
      "babel -q packages/config/src --out-dir packages/config/dist/es5",
    "es5:components":
      "babel -q packages/components/src --out-dir packages/components/dist/es5",
    "clean":
      "yarn run clean:core && yarn run clean:config && yarn run clean:components",
    "clean:core": "del-cli packages/core/dist",
    "clean:config": "del-cli packages/config/dist",
    "clean:components": "del-cli packages/components/dist",
    "build": "yarn run clean && yarn run test && yarn run lint && yarn run es5",
    "release:test-token":
      "test -n \"$CONVENTIONAL_GITHUB_RELEASER_TOKEN\" || (echo 'Setup your github autho token first: https://github.com/conventional-changelog/conventional-github-releaser#cli' && exit 1)",
    "release:publish": "lerna publish",
    "release:github": "conventional-github-releaser -p angular",
    "release":
      "yarn run build && yarn run release:test-token && yarn run release:publish && yarn run release:github"
  },
  "engines": {
    "node": ">= 7.4.0",
    "npm": ">= 4.0.5",
    "yarn": ">= 0.21.0"
  },
  "dependencies": {},
  "devDependencies": {
    "babel-cli": "^6.24.0",
    "babel-core": "^6.24.0",
    "babel-eslint": "^7.1.0",
    "babel-jest": "^19.0.0",
    "babel-plugin-transform-runtime": "^6.12.0",
    "babel-preset-react-native": "^1.9.1",
    "conventional-github-releaser": "^1.1.11",
    "coveralls": "^2.11.15",
    "del-cli": "^0.2.1",
    "enzyme": "^2.4.1",
    "eslint": "^3.10.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^6.10.3",
    "eslint-plugin-react-native": "^2.3.1",
    "eslint-stats": "^0.1.4",
    "jest": "^19.0.2",
    "jest-enzyme": "^3.0.0",
    "lerna": "^2.0.0",
    "react": "^15.3.2",
    "react-addons-test-utils": "^15.2.1",
    "react-dom": "^15.2.1",
    "react-native": "^0.47.2",
    "prop-types": "^15.5.10",
    "redux": "^3.5.2"
  },
  "peerDependencies": {
    "react": "^15.0.0",
    "prop-types": ">= 15.5.0",
    "redux": "^3.0.0"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./node_modules/jest-enzyme/lib/index.js",
    "modulePathIgnorePatterns": ["/dist/es5/"],
    "roots": [
      "<rootDir>/packages/core",
      "<rootDir>/packages/config",
      "<rootDir>/packages/components"
    ],
    "testMatch": ["**/__tests__/**/*.js"],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/__tests__/**",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!**/dist/es5/**"
    ]
  }
}
